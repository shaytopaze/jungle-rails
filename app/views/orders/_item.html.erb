<%item_total = product.price * quantity%>
<%@order_total += item_total%>
<tr>
  <td>
    <%=image_tag product.image.tiny%>
  </td>
  <td>
    <h4><%=product.name%></h4>
    <br>
    <p style='font-size:100%'><%=product.description%></p>
  </td>
  <td style='font-size:125%'>
    <%=product.price%>
  </td>
  <td style='font-size:125%'>
    <%=quantity%>
  </td>
  <td style='font-size:125%'>
    <%=item_total%>
  </td>
</tr>
